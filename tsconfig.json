{
  "compilerOptions": {
    "moduleResolution": "node",
    "types": ["node"],
    "module": "CommonJS",
    "target": "ES2021",
    "outDir": "dist",
    "strict": true,
    "esModuleInterop": true,
    "removeComments": true,
    "skipLibCheck": true,
    "typeRoots": ["types.d.ts", "global.d.ts", "node_modules/@types"],
    "forceConsistentCasingInFileNames": true
  },
  "include": ["src/**/*"]
}
